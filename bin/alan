#! /usr/bin/env bash

usage(){
  echo -e "\nUsage:\n  18f alan [options]\n"
  echo "  Options:"
  echo "  -h, --help               Display this help message"
  echo "  -n, --number             How many Alans"
}

NUMBER=2000

# Convert known long options to short options
for arg in "$@"; do
  shift
  case "$arg" in
    --help)
      set -- "$@" "-h"
      ;;
    --number)
      set -- "$@" "-n"
      ;;
    *)
      set -- "$@" "$arg"
      ;;
  esac
done

# Reset to beginning of arguments
OPTIND=1

# Process option flags
while getopts "hn:" opt; do
  case $opt in
    h )
      usage
      exit 0
      ;;
    n )
      if [[ $OPTARG -gt 0 ]]; then
        NUMBER=$OPTARG
        echo $NUMBER
      else
        echo "Enter a number above 0"
        exit 1
      fi
      ;;
  esac
done
shift $((OPTIND -1))

H=$(( $(tput lines) - 3 ))
W=$(tput cols)

clear
for n in $(seq 0 $NUMBER); do
  tput cup $((1 + $RANDOM % $H)) $((1 + $RANDOM % $W))
  echo "ALAN!"
done
tput cup $H 0
